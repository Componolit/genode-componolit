
exec rm -rf var/libcache/cbe
exec rm -rf var/libcache/cbe_cxx

build {
	core init timer
	server/ram_block
	gneiss/server/cbe
	server/cbe_block
	server/log_terminal
	server/report_rom
        gravel/app/block_correctness
}

create_boot_directory

install_config {
<config verbose="yes">
	<parent-provides>
		<service name="ROM"/>
		<service name="RAM"/>
		<service name="IRQ"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
	</parent-provides>

	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

	<default caps="100"/>
	<start name="timer">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Timer"/></provides>
	</start>

	<start name="report_rom">
		<resource name="RAM" quantum="32M"/>
		<provides> <service name="Report"/> <service name="ROM"/> </provides>
		<config verbose="yes"/>
	</start>

	<start name="log_terminal">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Terminal"/></provides>
	</start>

	<start name="cbe_block">
		<resource name="RAM" quantum="1G"/>
		<provides><service name="Block"/></provides>
		<config report="no" verbose="no" backing_size="512M"
		        vbd_size="2M" vbd_outer_degree="64"
		        ft_size="1M"   ft_outer_degree="64"
		        initialize="yes">
		</config>
		<route>
			<service name="Report"> <child name="report_rom"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="cbe">
		<resource name="RAM" quantum="4M"/>
		<provides><service name="Block"/></provides>
		<config show_progress="no" sync_interval="1" secure_interval="10"/>
		<route>
			<service name="Block"> <child name="cbe_block"/> </service>
			<service name="Terminal"> <child name="log_terminal"/> </service>
			<service name="Timer"> <child name="timer"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

        <start name="block-test-correctness">
            <resource name="RAM" quantum="32M"/>
            <config>
                <xml>
                    <device location="" size="10737418240"/>
                </xml>
            </config>
            <route>
                <service name="Block"><child name="cbe"/></service>
                <any-service><parent/><any-child/></any-service>
            </route>
        </start>

</config>}


build_boot_image {
	core init timer ram_block block-test-correctness cbe_block cbe
	ld.lib.so spark.lib.so gneiss.lib.so libsparkcrypto.lib.so
	log_terminal report_rom
}


append qemu_args " -nographic -m 1280 "

run_genode_until {.*child "block_tester" exited with exit value 0.*\n} 240
